{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} les articles
{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>
    <table class="table table-striped">


        <tr>
            <th>Identifiant</th>
            <th>Libellé</th>
            <th>Quantité</th>
            <th>Gamme</th>
        </tr>

        {% for val in articles %}
            <tr>
                <td>{{ val.id }}</td>
                <td>{{ val.libelle }}</td>
                <td>{{ val.quantite }}</td>
                <td>{{ val.gamme }}</td>
            </tr>

        {% endfor %}
    </table>

{% endblock %}